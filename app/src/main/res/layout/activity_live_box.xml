                android:layout_toEndOf="@+id/tv_num_seven"

                android:gravity="center"
                android:text="8"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_nine"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_eight"

                android:gravity="center"
                android:text="9"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_panel_three">

            <TextView
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_zero"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_seven"

                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <ImageView
                android:id="@+id/iv_enter_num"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"

                android:layout_gravity="center"

                android:layout_toEndOf="@+id/tv_num_zero"
                android:src="@drawable/ic_enter_num" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_volumenA"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/h_50"
        android:background="@drawable/borde_volumen_a"
        android:layout_marginTop="10dp"
        android:visibility="invisible" >

        <SeekBar
            android:id="@+id/sb_volumenA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="297dp"
            android:layout_toStartOf="@+id/tv_volumen" />

        <!--<TextView
            android:id="@+id/tv_volumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="100"
            android:textSize="@dimen/h_40" />-->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_actualizando"
        android:layout_width="@dimen/h_1000"
        android:layout_height="@dimen/h_400"
        android:background="#CC3A4053"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_50"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="@dimen/h_60"
            android:layout_gravity="center"
            android:gravity="center"
