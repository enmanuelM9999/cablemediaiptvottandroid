    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">



    <ViewStub
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/surface_view"
        android:id="@+id/surface_stub" />

    <ViewStub
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout="@layout/surface_view"
        android:id="@+id/subtitles_surface_stub" />

    <TextView
        android:id="@+id/tv_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pb_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_120"
        android:layout_centerInParent="true"
        android:padding="@dimen/w_2"
        android:textSize="25dp"
        android:textAlignment="center"
        android:typeface="sans"/>

    <LinearLayout
        android:id="@+id/ll_cpu_ram"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:minWidth="175dp"
        android:layout_above="@+id/rl_panel_down"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/degradado_b"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/tv_cpu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/tv_ram"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_net_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/rl_panel_down"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/h_200"
        android:background="@drawable/spped_length_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:textSize="36sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_mute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borde_volumen"
        android:src="@drawable/ic_mute"
        android:visibility="invisible" />

    <!--Por Celular-->
    <ImageView
        android:id="@+id/iv_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_panel_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_200"
        android:background="@drawable/degradado_panel_down"
        android:orientation="horizontal"
        android:paddingHorizontal="60dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="60dp"
                android:src="@drawable/cableoperador2" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text="Cable Ã‰xito     |"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="09:31"
            android:textAlignment="center"
            android:textSize="20dp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="3dp"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:text=""
            android:textSize="18dp" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_panel_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_210"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/degradado_panel_down"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/h_120"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/tv_channel_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_no_logo" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_channel_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/h_180"
            android:layout_toEndOf="@+id/ll_logo">

            <TextView
                android:id="@+id/tv_channel_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:text="500"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_channel_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/tv_channel_number"
                android:layout_toRightOf="@id/tv_channel_number"
                android:background="#B33D3D3D"
                android:gravity="center_vertical"
                android:minWidth="220dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:text="Canal Prueba"
                android:textColor="#fff"
                android:textSize="18dp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:background="#B33D3D3D"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="Calidad:"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/tv_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="Calidad HD"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:typeface="sans" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_classification"
                    android:layout_width="@dimen/h_60"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/tv_pg" />

                <RelativeLayout
                    android:id="@+id/rl_opciones"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_program_b"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="@dimen/h_180">

                    <ImageView
                        android:id="@+id/iv_opciones"
                        android:layout_width="@dimen/h_40"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_options" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/iv_opciones"
                        android:gravity="center"
                        android:text="Canales"
                        android:textSize="18dp"
                        android:typeface="sans" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/degradado_panel_top"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="5dp">

            <ImageView
                android:id="@+id/iv_informativo"
                android:layout_width="@dimen/w_120"
                android:layout_height="@dimen/w_120"
                android:layout_marginHorizontal="@dimen/w_20"
                android:layout_marginBottom="@dimen/w_20"
                android:alpha="0.9"
                android:background="@drawable/borde_volumen"
                android:src="@drawable/ic_information" />

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="@dimen/w_120"
                android:layout_height="@dimen/w_120"
                android:layout_marginHorizontal="@dimen/w_20"
                android:layout_marginBottom="@dimen/w_20"
                android:alpha="0.9"
                android:background="@drawable/borde_volumen"
                android:src="@drawable/button_fav"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="@dimen/w_120"
                android:layout_height="@dimen/w_120"
                android:layout_marginHorizontal="@dimen/w_20"
                android:layout_marginBottom="@dimen/w_20"
                android:alpha="0.9"
                android:background="@drawable/borde_volumen"
                android:src="@drawable/button_list" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="@dimen/h_600"
        android:layout_height="match_parent"

        android:layout_above="@+id/rl_panel_down"
        android:layout_below="@+id/ll_panel_up"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_70"
            android:background="@drawable/bordes_suave_top">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_70"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/arrow_right"
                android:layout_toEndOf="@+id/arrow_left"
                android:gravity="center"
                android:text="Lista de Canales"
                android:textAlignment="center"
                android:textSize="@dimen/h_40"
                android:textStyle="bold"></TextView>

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_canales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/degradado_list_channel_b"
            android:scrollbars="none"
            android:textAlignment="center" />

    </LinearLayout>

    <!--Panel Numeros-->
    <TextView
        android:id="@+id/tv_channel_number_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/w_180"
        android:layout_marginBottom="@dimen/h_30"
        android:textColor="#FFF"
        android:textSize="@dimen/w_120"
        android:typeface="sans"
        android:padding="5dp"
        android:background="@drawable/degradado_panel_down"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/rl_panel_num"
        android:layout_width="@dimen/w_450"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_channel_number_change"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/w_30"
        android:background="@drawable/back_panel_num"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/ll_panel_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_num_one"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:gravity="center"
                android:text="1"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_two"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_one"

                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_three"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_two"

                android:gravity="center"
                android:text="3"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_panel_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_panel_one">

            <TextView
                android:id="@+id/tv_num_four"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"
                android:gravity="center"
                android:text="4"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_five"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_four"

                android:gravity="center"
                android:text="5"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_six"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"

                android:layout_toEndOf="@+id/tv_num_five"

                android:gravity="center"
                android:text="6"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_panel_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_panel_two">

            <TextView
                android:id="@+id/tv_num_seven"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"
                android:gravity="center"
                android:text="7"
                android:textAlignment="center"
                android:textSize="@dimen/h_90" />

            <TextView
                android:id="@+id/tv_num_eight"
                android:layout_width="@dimen/w_150"
