<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">



      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">


          <LinearLayout
              android:id="@+id/ll_loading_channels"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:background="@drawable/bgbluedarkdegree"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="visible"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent">


              <ImageView
                  android:id="@+id/logo_cableoperador"
                  android:layout_width="300dp"
                  android:layout_height="150dp"
                  android:src="@drawable/cableoperador"></ImageView>

              <com.airbnb.lottie.LottieAnimationView
                  android:id="@+id/loading_animation"
                  android:layout_width="300dp"
                  android:layout_height="90dp"
                  android:layout_below="@+id/logo_cableoperador"
                  app:lottie_autoPlay="true"
                  app:lottie_fileName="890-loading-animation.json"
                  app:lottie_loop="true" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/loading_animation"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="0dp"
                  android:fontFamily="@font/segoe_ui_bold"
                  android:text="@string/powered_by"
                  android:textColor="#fff"
                  android:textSize="13dp" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/ll_info_user"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:clipToPadding="true"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:visibility="visible"
              tools:ignore="MissingConstraints">

              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  >

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_marginTop="-4dp"
                          android:text="ID: "
                          android:textColor="#fff"
                          android:textSize="15dp" />
                      <TextView
                          android:id="@+id/tvSerialNumber"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_marginTop="-4dp"
                          android:text="123456789"
                          android:textColor="#fff"
                          android:textSize="15dp" />
                  </LinearLayout>
              </RelativeLayout>

              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:visibility="invisible">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_marginTop="-4dp"
                          android:text="Server: "
                          android:textColor="#fff"
                          android:textSize="15dp" />
                      <TextView
                          android:id="@+id/tvServerInfo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_marginTop="-4dp"
                          android:text="51.111.11.11:1111"
                          android:textColor="#fff"
                          android:textSize="15dp" />
                  </LinearLayout>
              </RelativeLayout>
          </LinearLayout>

          <!-- Message no net -->
          <RelativeLayout
              android:id="@+id/rl_mensaje_wifi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:background="#123"
              android:paddingHorizontal="10dp"
              android:visibility="invisible">

              <ImageView
                  android:id="@+id/iv_inf_wi"
                  android:layout_width="@dimen/h_40"
                  android:layout_height="@dimen/h_40"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="5dp"
                  android:src="@drawable/no_signal"></ImageView>

              <TextView
                  android:id="@+id/tv_inf_wi"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/iv_inf_wi"
                  android:fontFamily="@font/segoe_ui_bold"
                  android:textSize="@dimen/h_40"
                  android:text="No tienes conexiÃ³n"></TextView>


          </RelativeLayout>


      </RelativeLayout>

      <!-- Open settings -->
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:clipToPadding="true"
          android:gravity="center"
          android:layout_margin="10dp"
          android:layout_alignParentBottom="true"

          android:orientation="vertical"
          android:visibility="visible"
          android:layout_alignParentLeft="true"
          >

          <Button
              android:id="@+id/btnOpenSettings"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="AJUSTES"
              android:background="@drawable/button_behavior_outline"
              android:visibility="visible"
              ></Button>
      </LinearLayout>
  </RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>